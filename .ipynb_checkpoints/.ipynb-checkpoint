    "Bins = [0,10,15,20,25,30,35,40,100]\n",
    "group_names = ['<10', '10-14', '15-19', '20-24', \n",
    "               '25-29', '30-34', '35-39', '40+']\n",
    "\n",
    "id_age = purchase_data[['SN', 'Age']]\n",
    "unique_id_age = id_age.drop_duplicates(subset='SN', keep='first', inplace=False)\n",
    "\n",
    "unique_id_age['range'] = pd.cut(unique_id_age[\"Age\"], Bins, right=False, labels=group_names)\n",
    "\n",
    "group = unique_id_age.groupby('range')\n",
    "total_count_info = group['Age'].count()\n",
    "\n",
